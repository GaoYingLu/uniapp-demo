@import "../../../common/vendor.wxss";

page {
  background: #FFFFFF;
}
.grace-steps {
  padding: 20rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
}
.grace-steps view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  float: none;
}
.grace-steps .step {
  width: 31.3%;
  margin: 0 1%;
  -webkit-flex-wrap: nowrap;
  flex-wrap: nowrap;
}
.grace-steps .step-circle {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  background: #F1F1F3;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  line-height: 50rpx;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  margin-right: 15rpx;
  color: #666;
  font-size: 28rpx;
}
.grace-steps .step-content {
  width: 100%;
  height: 22rpx;
  border-bottom: 1px solid #F1F1F3;
}
.grace-steps .step-title {
  line-height: 50rpx;
  height: 50rpx;
  background: #FFFFFF;
  width: auto;
  overflow: hidden;
  padding-right: 8rpx;
}
.grace-steps .current .step-circle {
  background: #00B26A;
  color: #FFFFFF;
}
.grace-steps .current .step-content {
  border-color: #00B26A;
}
.grace-steps .current .step-title {
  color: #00B26A;
}