@import "../../../common/vendor.wxss";

.grace-padding {
  padding: 2%;
  width: 96%;
}
view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  font-size: 28rpx;
  height: auto;
  width: 100%;
}
.grace-swiper-msg {
  width: 100%;
  padding: 12rpx 0;
  -webkit-flex-wrap: nowrap;
  flex-wrap: nowrap;
}
.grace-swiper-msg-icon {
  width: 50rpx;
  margin-right: 20rpx;
}
.grace-swiper-msg-icon image {
  width: 100%;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
}
.grace-swiper-msg swiper {
  width: 100%;
  height: 50rpx;
}
.grace-swiper-msg swiper-item {
  line-height: 50rpx;
}